{
  "name": "@buildcanada/colours",
  "version": "0.1.0",
  "description": "Canadian colour tokens for design systems",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": {
      "import": "./dist/styles/index.js",
      "types": "./dist/styles/index.d.ts"
    },
    "./styles/*": "./dist/styles/*"
  },
  "files": [
    "dist"
  ],
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/BuildCanada/bcds.git",
    "directory": "packages/colours"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun run src/build.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
